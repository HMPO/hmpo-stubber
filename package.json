{
  "name": "hmpo-stubber",
  "version": "3.0.2",
  "description": "Create dynamic stub API services using a simple JSON configuration",
  "main": "./lib",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run test:lint && npm run test:unit && npm run test:cover",
    "test:lint": "eslint .",
    "test:unit": "nyc --reporter=lcov --reporter=text-summary _mocha test/unit/ --recursive --require test/unit/helper",
    "test:cover": "nyc check-coverage",
    "prepare": "husky"
  },
  "bin": {
    "hmpo-stubber": "./bin/stubber.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HMPO/hmpo-stubber.git"
  },
  "keywords": [
    "stub",
    "mock",
    "api",
    "json"
  ],
  "author": "HMPO",
  "license": "MIT",
  "engines": {
    "node": "20.x || 22.x"
  },
  "bugs": {
    "url": "https://github.com/HMPO/hmpo-stubber/issues"
  },
  "homepage": "https://github.com/HMPO/hmpo-stubber#readme",
  "dependencies": {
    "body-parser": "^1.20.3",
    "debug": "^4.3.7",
    "express": "^4.21.1",
    "optionator": "^0.9.4",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "eslint": "^9.12.0",
    "globals": "^15.9.0",
    "hmpo-reqres": "^2.0.0",
    "husky": "^9.1.6",
    "mocha": "^10.7.3",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "sinon-test": "^3.1.6"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "coverage/**",
      "bin/**",
      "test/**",
      "eslint.config.js"
    ],
    "lines": 100,
    "branches": 100,
    "functions": 100,
    "statements": 100
  }
}
